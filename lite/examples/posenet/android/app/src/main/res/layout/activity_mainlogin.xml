<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainloginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/status_background"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/status_background"
            android:elevation="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/btn_navi"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_menu_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/wemakeprice_semibold"
                android:text="운동 목록"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:textSize="22sp"/>


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:text="@string/sign_out"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/wemakeprice_semibold"
                    android:text="부위별"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_navigate_next_24" />


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="334dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="318dp"
                        android:layout_height="119dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:fontFamily="@font/wemakeprice_semibold"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:text="복근"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_click_1"
                                    android:layout_width="136dp"
                                    android:layout_height="31dp"
                                    android:background="@drawable/button_background"
                                    android:fontFamily="@font/wemakeprice_regular"
                                    android:text="Click"
                                    android:textSize="14dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="138dp"
                            android:layout_height="127dp"
                            android:layout_marginTop="-8dp"
                            android:src="@drawable/abd" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="334dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="318dp"
                        android:layout_height="119dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:fontFamily="@font/wemakeprice_semibold"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:text="상체"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_click_2"
                                    android:layout_width="136dp"
                                    android:layout_height="34dp"
                                    android:background="@drawable/button_background"
                                    android:fontFamily="@font/wemakeprice_regular"
                                    android:text="Click"
                                    android:textSize="14dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="168dp"
                            android:layout_height="127dp"
                            android:layout_marginTop="-8dp"
                            android:src="@drawable/sidejack" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="334dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="318dp"
                        android:layout_height="119dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:fontFamily="@font/wemakeprice_semibold"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:text="하체"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_click_3"
                                    android:layout_width="136dp"
                                    android:layout_height="34dp"
                                    android:background="@drawable/button_background"
                                    android:fontFamily="@font/wemakeprice_regular"
                                    android:text="Click"
                                    android:textSize="14dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="115dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/squat" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/naviview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navi_menu" />


</androidx.drawerlayout.widget.DrawerLayout>